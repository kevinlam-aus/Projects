@model sp20team15finalproject.Models.ViewModels.CustomerSearchViewModel
@using Models.ViewModels

@{
    ViewData["Title"] = "DetailedSearch";
}

<h1>Detailed Customer Search>

<h4>Enter Information on the Customer you want to find.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DetailedCustomerSearchResults" , method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="advantageNumber" class="control-label"></label>
                <input asp-for="advantageNumber" type="number" class="form-control" />
                <span asp-validation-for="advantageNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
