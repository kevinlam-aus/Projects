@model IndexViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>Reward Miles:</dt>
        <dd>@Model.RewardMiles</dd>

        <dt>User Name:</dt>
        <dd>@Model.UserName</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            ]

        </dd>

        <dt>First Name:</dt>
        <dd>@Model.FirstName</dd>

        <dt>Middle Initial:</dt>
        <dd>@Model.MiddleInitial</dd>

        <dt>Last Name:</dt>
        <dd>@Model.LastName</dd>

        <dt>Date of birth:</dt>
        <dd>@Model.DOB</dd>

        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Address:</dt>
        <dd>@Model.Address</dd>

        <dt>City:</dt>
        <dd>@Model.City</dd>

        <dt>State:</dt>
        <dd>@Model.State</dd>

        <dt>Zip:</dt>
        <dd>@Model.Zip</dd>
    </dl>

   
</div>
<hr />
