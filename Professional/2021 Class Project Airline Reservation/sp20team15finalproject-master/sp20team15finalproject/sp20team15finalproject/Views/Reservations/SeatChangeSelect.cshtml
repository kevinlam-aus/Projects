
@using Models.ViewModels
@model sp20team15finalproject.Models.ViewModels.SeatReSelectionViewModel
<h1>Please Select your New Seat:</h1>

<img src="~/img/Seats.png" width="1200" />

@*Insert some code here that allows the user to see the seats.*@
<H6>@ViewBag.TakenSeats</H6>

<H6>@ViewBag.ErrorMessage</H6>
<form asp-action="SeatSelectionConfirmation">


    @Html.HiddenFor(model => model.TicketID, new { @value = Model.TicketID })


    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.OneA, true) 1A</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.OneB, true) 1B</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.TwoA, true) 2A</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.TwoB, true) 2B</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.ThreeA, true) 3A</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.ThreeB, true) 3B</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.ThreeC, true) 3C</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.ThreeD, true) 3D</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FourA, true) 4A</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FourB, true) 4B</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FourC, true) 4C</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FourD, true) 4D</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FiveA, true) 5A</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FiveB, true) 5B</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FiveC, true) 5C</label>
    <label class="radio">@Html.RadioButtonFor(model => model.SelectedSeat, Seats.FiveD, true) 5D</label>




    <div class="form-group">
        <input type="submit" value="Select Seat + Confirm Checkout" class="btn btn-primary" />
    </div>
</form>