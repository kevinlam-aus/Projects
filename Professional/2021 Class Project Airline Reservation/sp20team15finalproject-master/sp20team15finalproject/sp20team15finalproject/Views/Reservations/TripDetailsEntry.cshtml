@model sp20team15finalproject.Models.ViewModels.FlightTripTypeSearchViewModel
@using Models.ViewModels
<h1>Step 1 - Are you Round Trip or One-Way?</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="TripInformationEntry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Is this Reservation One-Way or Round-Trip?</h4>
            <label class="radio">@Html.RadioButtonFor(model => model.SearchTripType, enumTripType.round_trip, true)Round Trip </label>
            <label class="radio">@Html.RadioButtonFor(model => model.SearchTripType, enumTripType.one_way)One Way</label>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

